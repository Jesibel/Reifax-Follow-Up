<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
 xmlns:gap   = "http://phonegap.com/ns/1.0"
 id          = "com.followup.reifax"
 versionCode = "1" 
 version     = "1.0.0" >

  <!-- versionCode is optional and Android only -->

  <name>Reifax Follow Up</name>

  <description>
  Opportunity to follow up on the properties. 
  </description> 

  <author href="http://reifax.com" email="jesibelaranguren@gmail.com">
  Jesibel Aranguren 
  </author>
  
   <feature name="http://api.phonegap.com/1.0/network"/>
   <feature name="http://api.phonegap.com/1.0/media"/>
   <feature name="http://api.phonegap.com/1.0/file"/>
   <feature name="http://api.phonegap.com/1.0/notification"/>
   
 
  <content src="index.html" />
  
  <preference name="phonegap-version" value="3.7.0" />

  <!-- Preferences -->

  <preference name="orientation" value="default" />
  <preference name="show-splash-screen-spinner" value="false" />
  <preference name="android-minSdkVersion" value="14" />       <!-- JB 4.0 -->

  

  <preference name="SplashScreen" value="splash" />
  <preference name="SplashScreenDelay" value="2000" /> <!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->
  
 
  <!-- Define app icon for each platform. -->
  <icon src="resources/image/reifax_FOLLOW_UP_logo-120.png"/>
  
  <icon src="resources/image/reifax_FOLLOW_UP_logo-36.png"   gap:platform="android"    gap:density="ldpi" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-48.png"   gap:platform="android"    gap:density="mdpi" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-72.png"   gap:platform="android"    gap:density="hdpi" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-96.png"   gap:platform="android"    gap:density="xhdpi" />
  
  <icon src="resources/image/reifax_FOLLOW_UP_logo-29.png"   gap:platform="ios"        width="29" height="29" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-40.png"   gap:platform="ios"        width="40" height="40" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-57.png"   gap:platform="ios"        width="57" height="57" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-58.png"   gap:platform="ios"        width="58" height="58" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-60.png"   gap:platform="ios"        width="60" height="60" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-72.png"   gap:platform="ios"        width="72" height="72" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-76.png"   gap:platform="ios"        width="76" height="76" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-80.png"   gap:platform="ios"        width="80" height="80" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-114.png"  gap:platform="ios"        width="114" height="114" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-120.png"  gap:platform="ios"        width="120" height="120" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-144.png"  gap:platform="ios"        width="144" height="144" />
  <icon src="resources/image/reifax_FOLLOW_UP_logo-152.png"  gap:platform="ios"        width="152" height="152" />
  

  <gap:splash src="resources/image/reifax_FOLLOW_UP-320x480.png"  gap:platform="android" gap:qualifier="port-ldpi" />
  <gap:splash src="resources/image/reifax_FOLLOW_UP-320x480.png"  gap:platform="android" gap:qualifier="port-mdpi" />
  <gap:splash src="resources/image/reifax_FOLLOW_UP-480x800.png"  gap:platform="android" gap:qualifier="port-hdpi" />
  <gap:splash src="resources/image/reifax_FOLLOW_UP-720x1280.png"  gap:platform="android" gap:qualifier="port-xhdpi" />
  
  <gap:splash src="resources/image/reifax_FOLLOW_UP-480x320.png"  gap:platform="android" gap:qualifier="land-ldpi" />
  <gap:splash src="resources/image/reifax_FOLLOW_UP-480x320.png"  gap:platform="android" gap:qualifier="land-mdpi" />
  <gap:splash src="resources/image/reifax_FOLLOW_UP-800x480.png"  gap:platform="android" gap:qualifier="land-hdpi" />
  <gap:splash src="resources/image/reifax_FOLLOW_UP-1280x720.png" gap:platform="android" gap:qualifier="land-xhdpi" />
    
  <gap:splash src="resources/image/reifax_FOLLOW_UP-320x480.png"  gap:platform="ios"     width="320"  height="480" />
