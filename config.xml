  <gap:plugin name="org.apache.cordova.media" />	

  <gap:plugin name="com.boyvanderlaak.cordova.plugin.orientationchanger" version="0.1.1" />
  
  <gap:plugin name="org.apache.cordova.inappbrowser" version="0.2.4" />
  
  <gap:plugin name="io.github.pwlin.cordova.plugins.fileopener" version="1.0.1" />
  
  <gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />
  
  <gap:plugin name="org.apache.cordova.splashscreen" />
  
  <gap:plugin name="com.phonegap.plugin.mobile-accessibility" version="0.1.1" />
  

  <access origin="http://reifax.com" />       
  <access origin="http://reifax.com" subdomains="true" /> 
  <access origin="*"/>
  
  

</widget>